---
import '@/styles/global.css';
import '@/styles/animation.css';

import PagefindScript from '@/feature/CMD/pagefindScript.astro';
import ThemeScript from '@/feature/Theme/ThemeScript.astro';
import type { SEOProps } from '@/type';

import BaseHead from './component/BaseHead.astro';
import Footer from './component/Footer.astro';
import { LocationNav } from './component/LocationNav';
import PretendardFont from './component/PretendardFont.astro';

interface Props {
  seo?: Partial<SEOProps>;
}

const { seo } = Astro.props;
---

<html lang="ko">
  <head>
    <BaseHead {...seo} />
    <PretendardFont />

    <ThemeScript />
  </head>

  <body class="font-sans font-light transition-colors duration-200 dark:bg-dark-bg dark:text-gray-300">
    <main class="relative mx-auto min-h-dvh max-w-2xl px-2 md:px-0">
      <slot />
    </main>

    <slot name="side" />

    <LocationNav client:only="react" path={Astro.url.pathname} />

    <Footer />

    <PagefindScript />
  </body>
</html>

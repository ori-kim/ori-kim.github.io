---
import { SiVercel } from 'react-icons/si';
import { SiAstro } from 'react-icons/si';
import { SiMdx } from 'react-icons/si';

import { SocialList } from './SocialList';

const today = new Date();
---

<footer class="mx-auto max-w-2xl px-2 py-10 md:px-2">
  <div class="flex items-end justify-between">
    <p>&copy; {today.getFullYear()} ATeals All rights reserved.</p>
    <SocialList client:load />
  </div>
  <section class="my-2 flex items-center justify-end gap-2">
    <SiVercel />
    <SiAstro />
    <SiMdx />
  </section>
</footer>
